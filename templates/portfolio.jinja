{% extends "base.jinja" %}
{% block content %}
<div class="max-w-3xl mx-auto">
    <h2 class="text-2xl font-bold mb-2">Portfolio for {{ username }}</h2>
    <p class="mb-4 text-gray-700">{{ data.summary }}</p>
    <div class="flex gap-4 mb-6">
        <a href="/timeline/{{ username }}" class="bg-blue-100 text-blue-800 px-3 py-1 rounded hover:bg-blue-200">Project Timeline</a>
        <a href="/skills/{{ username }}" class="bg-green-100 text-green-800 px-3 py-1 rounded hover:bg-green-200">Skills</a>
        <a href="/blog/{{ username }}" class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded hover:bg-yellow-200">Blog</a>
    </div>
    <h3 class="text-xl font-semibold mb-2">Projects</h3>
    {% for repo in data.repos %}
    <div class="bg-white border rounded p-4 mb-4 shadow-sm">
        <h4 class="text-lg font-bold">{{ repo.name }}</h4>
        <p class="text-gray-600 mb-1">Tech Stack: {{ repo.tech_stack | join(", ") }}</p>
        {% if repo.live_demo %}
        <a href="{{ repo.live_demo }}" target="_blank" class="text-blue-700 underline">Live Demo</a>
        {% endif %}
        <pre class="bg-gray-100 p-2 mt-2 rounded text-sm overflow-x-auto">{{ repo.readme }}</pre>
    </div>
    {% endfor %}
</div>
{% endblock %} 
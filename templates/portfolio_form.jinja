{% extends "base.jinja" %}
{% block content %}
<div class="flex flex-col items-center justify-center min-h-[60vh]">
    <div class="bg-white shadow-xl rounded-lg p-10 max-w-lg w-full mt-12">
        <h2 class="text-3xl font-extrabold text-center text-blue-700 mb-4">Generate Your Portfolio</h2>
        <p class="text-gray-600 text-center mb-6">Enter your GitHub repository or username to create a stunning, interactive portfolio powered by AI.</p>
        <form method="post" action="/generate" class="flex flex-col gap-5">
            <div>
                <label for="github_url" class="block text-sm font-semibold mb-2">GitHub Repository or User URL</label>
                <input type="url" id="github_url" name="github_url" required placeholder="https://github.com/yourusername/yourrepo" class="w-full border border-gray-300 p-3 rounded focus:outline-none focus:ring-2 focus:ring-blue-400 transition" />
            </div>
            <button type="submit" class="w-full bg-blue-700 text-white py-3 rounded-lg font-bold text-lg shadow hover:bg-blue-800 transition">Generate Portfolio</button>
        </form>
    </div>
</div>
{% endblock %} 